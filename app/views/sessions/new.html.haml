-@page_title = "Log In"

-form_tag session_path do
  %p
    = label_tag 'login', "Username"
    %br
    = text_field_tag 'login'
  
  %p
    = label_tag 'password', "Password"
    %br
    = password_field_tag 'password'
    
  %p
    = label_tag 'remember_me', "Remember me"
    = check_box_tag 'remember_me'
  
  %p= submit_tag "Log in"